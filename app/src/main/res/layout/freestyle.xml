            <Button
                android:layout_height="wrap_content"
                android:text="@string/freestyle_ski_passi_nappi"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/freestyleSkiPassiNappi"
                style="@style/Nappi"/>

            <Button
                android:layout_height="wrap_content"
                android:text="@string/freestyle_lippuhinnat_nappi"
