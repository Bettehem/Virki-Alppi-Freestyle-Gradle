                        android:text="@string/sposti_nappi"
                        android:id="@+id/chrisSposti"
                        android:layout_weight="20"
                        style="@style/Nappi"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/valtteri_nimi"
                    android:layout_gravity="center_horizontal"
                    android:textSize="24sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="60">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/puhelu_nappi"
                        android:id="@+id/valtteriPuhelu"
                        android:layout_weight="20"
                        style="@style/Nappi"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/viesti_nappi"
                        android:id="@+id/valtteriViesti"
                        android:layout_weight="20"
                        style="@style/Nappi"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sposti_nappi"
                        android:id="@+id/valtteriSposti"
                        android:layout_weight="20"
                        style="@style/Nappi"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yht_ryhmavastaavat_lisateksti"
                    android:layout_gravity="center_horizontal"
                    android:textSize="24sp" />
            </LinearLayout>
        </ScrollView>
</LinearLayout>
