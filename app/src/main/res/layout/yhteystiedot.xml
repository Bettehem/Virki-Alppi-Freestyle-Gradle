<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
	android:id="@+id/tausta">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yht_ryhmat"
                    android:id="@+id/textView1"
                    android:layout_gravity="center_horizontal"
                    android:textSize="34sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kalevi_nimi"
                    android:id="@+id/textView2"
                    android:layout_gravity="center_horizontal"
                    android:textSize="24sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="60">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/puhelu_nappi"
                        android:id="@+id/kaleviPuhelu"
                        android:layout_weight="20"
                        style="@style/Nappi"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/viesti_nappi"
                        android:id="@+id/kaleviViesti"
                        android:layout_weight="20"
                        style="@style/Nappi"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sposti_nappi"
                        android:id="@+id/kaleviSposti"
                        android:layout_weight="20"
                        style="@style/Nappi"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yht_mainostus"
                    android:id="@+id/textView3"
                    android:layout_gravity="center_horizontal"
                    android:textSize="34sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ari_nimi"
                    android:id="@+id/textView4"
                    android:layout_gravity="center_horizontal"
                    android:textSize="24sp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="60">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/puhelu_nappi"
                                android:id="@+id/ariPuhelu"
                                android:layout_weight="20"
                                style="@style/Nappi"/>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/viesti_nappi"
                                android:id="@+id/ariViesti"
                                android:layout_weight="20"
                                style="@style/Nappi"/>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sposti_nappi"
                                android:id="@+id/ariSposti"
                                android:layout_weight="20"
                                style="@style/Nappi"/>
                    </LinearLayout>
            </LinearLayout>
        </ScrollView>
</LinearLayout>
