                        android:layout_weight="20"
                        style="@style/Nappi"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/viesti_nappi"
                        android:id="@+id/timoViesti"
                        android:layout_weight="20"
                        style="@style/Nappi"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sposti_nappi"
                        android:id="@+id/timoSposti"
                        android:layout_weight="20"
                        style="@style/Nappi"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yht_ryhmavastaavat"
                    android:layout_gravity="center_horizontal"
                    android:textSize="34sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jarkko_nimi"
                    android:layout_gravity="center_horizontal"
                    android:textSize="24sp" />

                <LinearLayout
                    android:orientation="horizontal"
